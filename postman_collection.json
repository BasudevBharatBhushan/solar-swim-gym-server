		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Automatically extract token and certain IDs if present",
					"if (pm.response.code === 200 || pm.response.code === 201) {",
					"    const jsonData = pm.response.json();",
					"    if (jsonData.token) {",
					"        pm.environment.set(\"token\", jsonData.token);",
					"    }",
					"    if (jsonData.location_id) {",
					"        pm.environment.set(\"lastLocationId\", jsonData.location_id);",
					"    }",
					"    if (jsonData.activation_token) {",
					"        pm.environment.set(\"activationToken\", jsonData.activation_token);",
					"    }",
					"}"
				]
			}
		}
